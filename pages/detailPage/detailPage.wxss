/* pages/detailPage/detailPage.wxss */
.tl-largermap{
  position: relative;
  background-color: #fff
}
.tl-largerfigure{
position: absolute;
right: 20rpx;
bottom: 20rpx;
padding: 5rpx 20rpx;
background-color: rgba(0, 0, 0, 0.3);
border-radius: 50rpx;
color: #fff;
font-size: 22rpx;
}
.tl-largermap swiper{
height: 600rpx;
}
.tl-largermap image{
  height: 600rpx;
}
.tl-dishname{
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center
}
.tl-dishname text{
  font-size: 32rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-right: 20rpx;
}
.tl-dishname .iconfont{
  color: rgb(241, 85, 12)
}
.tl-Price-details{
  padding: 10rpx 20rpx;
  background-color: #fff;
  font-size: 24rpx;
  color: #999
}
.tl-Price-li{
  padding: 10rpx 0;
}
.tl-Price-details .tl-Price-li{
  display: flex;
  justify-content:  space-between;

}
.tl-vipcard{
  display: block;
  width: 100rpx;
}
.tl-recommend{

  flex-grow: 1;
    word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
   color: #333
}
.tl-present{
  font-size: 32rpx;
  color: rgb(245, 66, 66)
}
.tl-ruling{
  text-decoration:  line-through;
  margin-left: 10rpx;
}
.tl-dynamic{
  margin-top: 20rpx;
  background-color: #fff;
  text-align: center;
  padding: 20rpx;
}
.tl-pltx{
  display: flex;
  flex-wrap:  wrap;
  justify-content: center;
  
}
.tl-pltx image{
  width: 60rpx;
  border-radius: 60rpx;
  margin: 10rpx;
}
.tl-wxtx{
   width: 60rpx;
   height: 60rpx;
   border-radius: 60rpx;
   margin: 10rpx;
   overflow: hidden;
   background-color: #eee;
}
.tl-dianzan .iconfont{
  font-size: 40rpx;
}
.tl-dianzan{
  color: #999;
  position: relative;
  height: 80rpx;
}
.tl-dianzan-active{
  color: rgb(230, 101, 26)
}
.tl-people-counting{
  margin: 10rpx 0;
  font-size: 26rpx;
  color: #999
}
.tl-tabcur{
  background-color: #fff;
  padding: 40rpx 0 100rpx 0;
}
.tl-graphic-introduction image{
width: 100%;
}
.tl-input{
  height: 60rpx;
  background-color: #eee;
padding:0 20rpx;
line-height: 60rpx;
border-radius: 50px;
}
.bg-grey{
  background-color: #eee;
  color: #333
}
.cu-bar.tabbar.shop .action {
width: 100rpx;
flex: initial;
}
.cu-bar.tabbar .action [class*="cuIcon-"] {
width:60rpx;
}
.tl-cu-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99
}
.tl-cu-bar .action{
background-color: #fff
}
.tl-button-white{
  background-color: #fff;
  border: none;
}
.tl-button-white::after {
  display: none
}
.tl-kf{
  position: fixed;
  bottom: 140rpx;
  right: 20rpx;
  text-align: center;
  width: 100rpx;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0 0 10px #999;
  border-radius: 50%;
  font-size: 22rpx;
  color: var(--green);

}
.tl-kf .cuIcon-weixin{
    font-size:48rpx;
    color: var(--green);

}
.tl-kf button{
  padding: 0;
  border: none;
  font-size: 22rpx;
  line-height: inherit;
  background-color: transparent;
}
.tl-kf button::after {
display: none;
}

.tl-xzsl{
  padding: 40rpx;
  display: flex;
  justify-content:  space-between;
  align-items: center
}
.tl-addmove{
  display: flex;
 align-items: center;
}
.tl-gpimai{
  font-size: 40rpx;
  padding: 30rpx 0;
}
.padding-xs {
position: relative;

}

.cu-tag.sm{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.tl-xzsl input{
  width: 100rpx;
}
.tl-addmove>view{
  font-size: 44rpx;
  padding: 10rpx;
}