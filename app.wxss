/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "common/iconfont.wxss";
@import "pages/index/index.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.tl-container {
  background-color: #f2f2f2;
}

.tl-ending {
  height: 200rpx;
line-height: 200rpx;
  text-align: center;
  position: relative;
  background-color: #f2f2f2;
}

.tl-ending::before {
  content: "";
  position: absolute;
  height: 2rpx;
  background-color: #ccc;
  top: 50%;
  left: 15%;
  right: 15%;
}

.tl-ending::after {
  background-color: #f2f2f2;
  content: "䔡 ● 情 ● 未 ● 了";
  position: absolute;
  left: 30%;
  right: 30%;
  text-align: center;
  color: rgb(235, 166, 102);
   white-space:nowrap;
 overflow: hidden;
}
